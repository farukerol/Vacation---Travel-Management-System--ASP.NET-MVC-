@using MVCVacationManagement.Models.Entity

@model List<TBLTUR>
@{
    ViewBag.Title = "ResponsibleTourList";
    Layout = "~/Views/Shared/_TourManagerLayout.cshtml";
}

<html>
<head>
    <title>Sorumlu Olunan Turlar</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

    <h2>Sorumlu Olunan Turlar</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Tur Adı</th>
                <th>Kalkış Yeri</th>
                <th>Süre</th>
                <th>Ücret</th>
                <th>Tarih</th>
                <th>Müşteriler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.tur_basligi</td>
                <td>@item.kalkis_yeri</td>
                <td>@item.sure</td>
                <td>@item.ucret</td>
                <td>@Convert.ToDateTime(item.tarih).ToString("dd/MM/yyyy")</td>
                <td><a href="/TourManager/ListTourCustomers/@item.id" class="btn btn-info">Müşteriler</a></td>
            </tr>
            }

        </tbody>
    </table>

</body>

</html>

