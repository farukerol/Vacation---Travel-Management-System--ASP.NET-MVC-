@model MVCVacationManagement.Models.Entity.TBLHOTEL
@{
    ViewBag.Title = "HotelReservation";
    Layout = "~/Views/Shared/_MainPageLayout.cshtml";
}

<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<h2 style="color:darkred">@ViewBag.hoteladi Detayları</h2>


<div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel"  >
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="@TempData["hotel_fotograf"]"  style="width:1200px; height:400px;">
            </div>

            <div class="item">
                <img src="@TempData["hotel_fotograf2"]"  style="width: 1200px; height: 400px; ">
            </div>

            <div class="item">
                <img src="@TempData["hotel_fotograf3"]"  style="width: 1200px; height: 400px; ">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<table class="table table-hover" style="margin-top:30px">


    <tr>
        <td>
            <label style="font-weight:bolder; color:darkblue"> Otel Adı: </label><label style="color:black"> @ViewBag.hoteladi</label>
        </td>
    </tr>

    <tr>
        <td>
            <label style="font-weight:bolder; color:darkblue"> Müşteri İsmi: </label> <label style="color:black"> @Session["customer_name"].ToString()</label>
        </td>
    </tr>

    <tr>
        <td>
            <label style="font-weight:bolder; color:darkblue"> Müşteri Soy İsmi: </label> <label style="color:black"> @Session["customer_surname"].ToString()</label>
        </td>
    </tr>

    <tr>
        <td>
            <label style="font-weight:bolder; color:darkblue"> Otel Konumu: </label><label style="color:black"> @ViewBag.konum</label>
        </td>
    </tr>

    <tr>
        <td>
            <label style="font-weight:bolder; color:darkblue"> Otel Detayları: </label><label style="color:black"> @ViewBag.detaylar</label>
        </td>
    </tr>

    <tr>
        <td>
            <label style="font-weight:bolder; color:darkblue"> Bir Kişilik Ücret: </label><label style="color:black">  @ViewBag.bir_kisilik_ucret ₺</label>

            <label style="font-weight:bolder; color:darkblue"> İki Kişilik Ücret: </label><label style="color:black">  @ViewBag.iki_kisilik_ucret ₺</label>

            <label style="font-weight:bolder; color:darkblue"> Üç Kişilik Ücret: </label><label style="color:black">  @ViewBag.uc_kisilik_ucret ₺</label>

            <label style="font-weight:bolder; color:darkblue"> Dört Kişilik Ücret: </label><label style="color:black">  @ViewBag.dort_kisilik_ucret ₺</label>

    </tr>

    <tr>
        <td>
            <label style="font-weight:bolder; color:darkblue"> Otel Yetkilisi: </label><label style="color:black"> @ViewBag.hotelYetkilisi</label>
        </td>
    </tr>

    <td><a href="/Hotel/ConfirmHotelReservation/@ViewBag.hotelid" class="btn btn-info">Rezervasyon Tamamlama Sayfasına Git</a></td>

</table>


